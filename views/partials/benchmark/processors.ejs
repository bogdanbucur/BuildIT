<table class="table table-hover table-responsive" style="margin-top: 2%">
    <thead>
    <tr>
        <th class="text-center" style="width: 5%">Rank</th>
        <th class="text-center" style="width: 30%">Product Name</th>
        <th class="text-center" style="width: 5%">Price</th>
        <th class="text-center" style="width: 40%">3DMark Fire Strike Graphics Score</th>
        <th class="text-center" style="width: 20%">Popularity</th>
    </tr>
    </thead>
    <tbody>
    <% cpu.forEach((item) => { %>
    <tr>
        <th class="text-center" scope="row" style="width: 5%"><%= cpu.indexOf(item) + 1 %></th>
        <td class="text-center"><%= item.name %></td>
        <td class="text-center"><%= item.price %></td>
        <td class="text-center">
            <div class="row">
                <div class="col-sm-2">
                    <span class="pull-right"><%= item.mark %></span>
                </div>
                <div class="col-sm-8">
                    <div class="progress progress-line-primary" style="margin-top: 3%">
                        <div class="progress-bar progress-bar-primary" role="progressbar" style="width: <%= item.markPercentage %>%;">
                            <span class="sr-only"><%= item.markPercentage %>% Complete</span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <form action="/updateMark?id=<%= item.id %>^<%= item.colType %>" method="post" class="pull-right" style="margin-top: -70%">
                        <button type="submit" class="btn btn-xs" style="background-color: white;">
                            <i class="fa fa-plus-square-o" style="color: green;"></i>
                        </button>
                    </form>
                </div>
            </div>
        </td>
        <td class="text-center"><%= item.rating %>
            <li class="fa fa-star" style="color: gold;"></li>
        </td>
    </tr>
    <% }) %>
    </tbody>
</table>