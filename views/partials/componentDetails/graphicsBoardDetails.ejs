<button type="button" class="btn btn-primary btn-sm pull-right" style="margin-bottom: 5%" data-toggle="modal" data-target="#gpuDetails<%= item._id%>" data-backdrop="true" >
    Details
</button>

<div class="modal fade" id="gpuDetails<%= item._id%>" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center"><%= item.name %></h4>
                <div id="first-slider">
                    <div id="carousel-example-generic<%= item._id %>" class="carousel slide carousel-fade" style="margin-top: 5%">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic<%= item._id %>" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic<%= item._id %>" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic<%= item._id %>" data-slide-to="2"></li>
                            <li data-target="#carousel-example-generic<%= item._id %>" data-slide-to="3"></li>
                        </ol>
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                            <!-- Item 1 -->
                            <div class="item active slide1">
                                <div class="row">
                                    <img width="300" height="300" data-animation="animated zoomInLeft" src="<%= item.image0 %>" style="margin-left: 25%">
                                </div>
                            </div>
                            <!-- Item 2 -->
                            <% if (item.image1) { %>
                            <div class="item slide2">
                                <div class="row">
                                    <img width="300" height="300" data-animation="animated zoomInLeft" src="<%= item.image1 %>" style="margin-left: 25%">
                                </div>
                            </div>
                            <% } %>
                            <!-- Item 3 -->
                            <% if (item.image2) { %>
                            <div class="item slide3">
                                <div class="row">
                                    <img width="300" height="300" data-animation="animated zoomInLeft" src="<%= item.image2 %>" style="margin-left: 25%">
                                </div>
                            </div>
                            <% } %>
                            <!-- Item 4 -->
                            <% if (item.image3) { %>
                            <div class="item slide4">
                                <div class="row">
                                    <img width="300" height="300" data-animation="animated zoomInLeft" src="<%= item.image3 %>" style="margin-left: 25%">
                                </div>
                            </div>
                            <% } %>
                            <!-- End Item 4 -->

                        </div>
                        <!-- End Wrapper for slides-->
                        <a class="left carousel-control" href="#carousel-example-generic<%= item._id %>" role="button" data-slide="prev">
                            <i class="fa fa-angle-left"></i><span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic<%= item._id %>" role="button" data-slide="next">
                            <i class="fa fa-angle-right"></i><span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <h3 class="text-center">Specifications</h3>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th class="text-primary">General</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <th scope="row">Slot</th>
                        <td><%= item.generalSlot %></td>
                    </tr>
                    <tr>
                        <th scope="row">GPU</th>
                        <td><%= item.generalGPU %></td>
                    </tr>
                    <tr>
                        <th scope="row">Type</th>
                        <td><%= item.generalType %></td>
                    </tr>
                    <tr>
                        <th scope="row">Max Resolution</th>
                        <td><%= item.generalMaxRes %></td>
                    </tr>
                    <tr>
                        <th scope="row">SLI Support</th>
                        <td><%= item.generalSLI %></td>
                    </tr>
                    </tbody>
                    <thead>
                    <tr>
                        <th class="text-primary">Processor</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <th scope="row">Chipset</th>
                        <td><%= item.cpuChipset %></td>
                    </tr>
                    <tr>
                        <th scope="row">Series</th>
                        <td><%= item.cpuSeries %></td>
                    </tr>
                    <tr>
                        <th scope="row">Technology</th>
                        <td><%= item.cpuTechnology %></td>
                    </tr>
                    <tr>
                        <th scope="row">Frequency</th>
                        <td><%= item.cpuFreq %></td>
                    </tr>
                    </tbody>
                    <thead>
                    <tr>
                        <th class="text-primary">Memory</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <th scope="row">Capacity</th>
                        <td><%= item.memoryCapacity %></td>
                    </tr>
                    <tr>
                        <th scope="row">Type</th>
                        <td><%= item.memoryType %></td>
                    </tr>
                    <tr>
                        <th scope="row">BUS</th>
                        <td><%= item.memoryBUS %></td>
                    </tr>
                    <tr>
                        <th scope="row">Frequency</th>
                        <td><%= item.memoryFreq %></td>
                    </tr>
                    </tbody>
                    <thead>
                    <tr>
                        <th class="text-primary">Connectivity</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <th scope="row">Display Port</th>
                        <td><%= item.connectivityDisplayPort %></td>
                    </tr>
                    <tr>
                        <th scope="row">DVI</th>
                        <td><%= item.connectivityDVI %></td>
                    </tr>
                    <tr>
                        <th scope="row">HDMI</th>
                        <td><%= item.connectivityHDMI %></td>
                    </tr>
                    </tbody>
                    <thead>
                    <tr>
                        <th class="text-primary">Cooling</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <th scope="row">Type</th>
                        <td><%= item.coolingType %></td>
                    </tr>
                    <tr>
                        <th scope="row">Cooler</th>
                        <td><%= item.coolingCooler %></td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
