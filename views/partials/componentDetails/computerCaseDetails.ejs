<button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#caseDetails<%= item._id%>" data-backdrop="true" >
    <i class="fa fa-info"></i>
</button>

<div class="modal fade" id="caseDetails<%= item._id%>" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center"><%= item.name %></h4>
                <div id="first-slider">
                    <div id="carousel-example-generic<%= item._id %>" class="carousel slide carousel-fade" style="margin-top: 5%">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic<%= item._id %>" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic<%= item._id %>" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic<%= item._id %>" data-slide-to="2"></li>
                            <li data-target="#carousel-example-generic<%= item._id %>" data-slide-to="3"></li>
                        </ol>
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                            <!-- Item 1 -->
                            <div class="item active slide1">
                                <div class="row">
                                    <img width="300" height="300" data-animation="animated zoomInLeft" src="<%= item.image0 %>">
                                </div>
                            </div>
                            <!-- Item 2 -->
                            <% if (item.image1) { %>
                            <div class="item slide2">
                                <div class="row">
                                    <img width="300" height="300" data-animation="animated zoomInLeft" src="<%= item.image1 %>">
                                </div>
                            </div>
                            <% } %>
                            <!-- Item 3 -->
                            <% if (item.image2) { %>
                            <div class="item slide3">
                                <div class="row">
                                    <img width="300" height="300" data-animation="animated zoomInLeft" src="<%= item.image2 %>">
                                </div>
                            </div>
                            <% } %>
                            <!-- Item 4 -->
                            <% if (item.image3) { %>
                            <div class="item slide4">
                                <div class="row">
                                    <img width="300" height="300" data-animation="animated zoomInLeft" src="<%= item.image3 %>">
                                </div>
                            </div>
                            <% } %>
                            <!-- End Item 4 -->

                        </div>
                        <!-- End Wrapper for slides-->
                        <a class="left carousel-control" href="#carousel-example-generic<%= item._id %>" role="button" data-slide="prev">
                            <i class="fa fa-angle-left"></i><span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic<%= item._id %>" role="button" data-slide="next">
                            <i class="fa fa-angle-right"></i><span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <h3 class="text-center">Specifications</h3>
                <table class="table table-striped">
                    <tbody>
                    <tr>
                        <th scope="row">Type</th>
                        <td><%= item.type %></td>
                    </tr>
                    <tr>
                        <th scope="row">Fans</th>
                        <td><%= item.fans %></td>
                    </tr>
                    <tr>
                        <th scope="row">Material</th>
                        <td><%= item.material %></td>
                    </tr>
                    <tr>
                        <th scope="row">Power Supply</th>
                        <td><%= item.powerSupply %></td>
                    </tr>
                    <tr>
                        <th scope="row">Motherboard Compatibility</th>
                        <td><%= item.motherboardCompatibility %></td>
                    </tr>
                    <tr>
                        <th scope="row">Side Panel Window</th>
                        <td><%= item.sidePanelWindow %></td>
                    </tr>
                    <tr>
                        <th scope="row">LED</th>
                        <td><%= item.led %></td>
                    </tr>
                    <tr>
                        <th scope="row">Included Fans</th>
                        <td><%= item.includedFans %></td>
                    </tr>
                    <tr>
                        <th scope="row">Exterior Slots</th>
                        <td><%= item.exteriorSlots %></td>
                    </tr>
                    <tr>
                        <th scope="row">Interior Slots</th>
                        <td><%= item.interiorSlots %></td>
                    </tr>
                    <tr>
                        <th scope="row">Other</th>
                        <td><%= item.other %></td>
                    </tr>
                    <tr>
                        <th scope="row">Size</th>
                        <td><%= item.size %></td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
