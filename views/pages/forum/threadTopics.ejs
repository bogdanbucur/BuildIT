<%- contentFor('body') %>
<link rel="stylesheet" type="text/css" href="/stylesheets/specific/material-bootstrap-wizard.css">

<div class="main">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
                <div class="wizard-container">
                    <div class="card wizard-card" data-color="purple" id="wizard" style="background: purple">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="wizard-header">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <h4 class="text-center"><span style="color: white"><%= thread.title %></span></h4>
                                        </div>
                                        <% let type = 0
                                        switch (user.data.userType) {
                                            case 'god':
                                                type = 1
                                                break
                                            case 'demigod':
                                                type = 1
                                                break
                                            case 'moderator':
                                                type = 1
                                                break
                                            default:
                                                type = 0
                                        }
                                        if (type === 1) { %>
                                        <div class="col-sm-3">
                                            <button type="button" class="btn btn-simple btn-sm" data-toggle="modal"
                                                    href="javascript:void(0)" data-backdrop="true"
                                                    data-target="#archiveTopic" style="margin-top: 5%">
                                                <span style="color: white"><strong>Archive</strong></span>
                                            </button>
                                            <% include ../../partials/forum/archiveTopic.ejs %>
                                            <button type="button" class="btn btn-simple btn-sm" data-toggle="modal"
                                                    href="javascript:void(0)" data-backdrop="true"
                                                    data-target="#addTopic" style="margin-top: 5%">
                                                <span style="color: white"><strong>Add Topic</strong></span>
                                            </button>
                                            <% include ../../partials/forum/addTopicModal.ejs %>
                                        </div>
                                        <% } %>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-8 col-sm-offset-2">
                                            <h6 class="text-center"><span style="color: white"><%= thread.description %></span></h6>
                                        </div>
                                    </div>
                                </div>
                                <div class="wizard-container" style="padding-top: 0">
                                    <% topics.forEach((item) => {
                                    if (item.archived === false) { %>
                                    <div class="card" style="height: 20%; width: 95%; margin: 0 2.5% 2% 2.5%">
                                        <div class="header" style="margin-left: 2%; height: 20%">
                                            <a href="/topic?topicID=<%= item._id %>">
                                                <p class="title"><%= item.title %></p>
                                            </a>
                                        </div>
                                        <div class="content" style="margin-left: 2%; height: 80%">
                                            <%= item.description %>
                                        </div>
                                    </div>
                                    <% }
                                    }) %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>