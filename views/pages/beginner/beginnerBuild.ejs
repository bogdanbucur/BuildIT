<%- contentFor('body') %>

<link rel="stylesheet" type="text/css" href="/stylesheets/specific/material-bootstrap-wizard.css">

<div class="main container">
    <div class="image-container set-full-height">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <% if (failed) { %>
                    <div class="alert alert-info text-center" style="width: 75%; margin: 0 auto">We are sorry. We were not able to find a configuration matching your criteria. Try again!</div>
                    <% } %>
                    <div class="wizard-container" style="margin-top: -5%">
                        <div class="card wizard-card" data-color="blue" id="wizard">
                            <form action="/beginnerBuild" method="post">
                                <!--        You can switch ' data-color="azzure" '  with one of the next bright colors: "blue", "green", "orange", "red"          -->

                                <div class="wizard-header">
                                    <h3>
                                        Let us help you with your build <br>
                                        <small>Choose your preferences and we will find the best PC build for you.
                                        </small>
                                    </h3>
                                </div>
                                <div class="wizard-navigation">
                                    <ul class="nav nav-pills">
                                        <li><a href="#usage" data-toggle="tab">Usage</a></li>
                                        <li><a href="#pcType" data-toggle="tab">PC Type</a></li>
                                        <li><a href="#pricing" data-toggle="tab">Pricing</a></li>
                                    </ul>
                                </div>
                                <div class="tab-content">
                                    <div class="tab-pane" id="usage">
                                        <div class="row">
                                            <div class="col-sm-12" style="margin-top: 2%">
                                                <h4 class="info-text"> This is how we start finding the best
                                                    configuration for you.</h4>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    <label>Laptop or desktop?</label>
                                                    <select class="form-control" id="type" name="type"
                                                            onchange="change(this.value);">
                                                        <option disabled selected>Select</option>
                                                        <option value="Laptop">Laptop</option>
                                                        <option value="Desktop">Desktop</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    <label>Watch a lot of movies?</label>
                                                    <select class="form-control" id="movies" name="movies">
                                                        <option disabled selected>Select</option>
                                                        <option>Yes</option>
                                                        <option>No</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    <label>Spend a lot of time on the internet?</label>
                                                    <select class="form-control" id="internet" name="internet">
                                                        <option disabled selected>Select</option>
                                                        <option>Yes</option>
                                                        <option>No</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-5 col-sm-offset-3">
                                                <div class="form-group">
                                                    <label id="userChoiceLabel"></label>
                                                    <select class="form-control" id="userChoice" name="userChoice">
                                                        <option disabled selected>Selected</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane" id="pcType">
                                        <h4 class="info-text" style="margin-top: 2%">What kind of computer do you
                                            prefer? </h4>
                                        <div class="row">
                                            <div class="col-sm-10 col-sm-offset-1">
                                                <div class="choice" data-toggle="wizard-checkbox">
                                                    <div class="col-sm-4 col-sm-offset-2">
                                                        <input type="checkbox" name="apple" value="Apple">
                                                        <div class="icon">
                                                            <i class="fa fa-apple fa-5x"></i>
                                                        </div>
                                                        <p style="margin-left: 5%">Apple</p>
                                                    </div>
                                                </div>

                                                <div class="choice" data-toggle="wizard-checkbox">
                                                    <div class="col-sm-4">
                                                        <input type="checkbox" name="windows" value="Windows">
                                                        <div class="icon">
                                                            <i class="fa fa-windows fa-5x"></i>
                                                        </div>
                                                        <p style="margin-left: 5%">Windows</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane" id="pricing">
                                        <div class="row">
                                            <div class="col-sm-10 col-sm-offset-1">
                                                <h4 class="info-text"> Choose the pricing range </h4>
                                                <div class="col-sm-4">
                                                    <div class="choice" data-toggle="wizard-checkbox">
                                                        <input type="checkbox" name="low" value="low">
                                                        <div class="icon">
                                                            <i class="fa fa-money"></i>
                                                        </div>
                                                        <h6><1000 USD</h6>
                                                    </div>
                                                </div>
                                                <div class="col-sm-4">
                                                    <div class="choice" data-toggle="wizard-checkbox">
                                                        <input type="checkbox" name="average" value="average">
                                                        <div class="icon">
                                                            <i class="fa fa-money"></i>
                                                        </div>
                                                        <h6>1000 - 2000 USD</h6>
                                                    </div>
                                                </div>
                                                <div class="col-sm-4">
                                                    <div class="choice" data-toggle="wizard-checkbox">
                                                        <input type="checkbox" name="big" value="big">
                                                        <div class="icon">
                                                            <i class="fa fa-money"></i>
                                                        </div>
                                                        <h6>>2000 USD</h6>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="wizard-footer">
                                    <div class="pull-right">
                                        <input type='button' class='btn btn-next btn-fill btn-info btn-wd btn-sm'
                                               name='next' value='Next'/>
                                        <input type='submit' class='btn btn-finish btn-fill btn-info btn-wd btn-sm'
                                               name='finish' value='Finish'/>
                                    </div>
                                    <div class="pull-left">
                                        <input type='button' class='btn btn-previous btn-fill btn-default btn-wd btn-sm'
                                               name='previous' value='Previous'/>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- contentFor('additionalScript') %>

<script type="text/javascript" src="/javascripts/specific/jquery.bootstrap.wizard.js"></script>
<script type="text/javascript" src="/javascripts/specific/jquery.validate.min.js"></script>
<script type="text/javascript" src="/javascripts/specific/material-bootstrap-wizard.js"></script>
<script type="text/javascript">
    const elems = {
        Laptop: ["Small", "Average", "Big"],
        Desktop: ["Not quite", "Often", "Very often"],
    }

    function change(value) {
        if (value.length === 0) document.getElementById("movies").innerHTML = "<option></option>";
        else if (value === "Laptop") {
            let options = "";
            for (let id in elems[value]) {
                options += "<option>" + elems[value][id] + "</option>";
            }
            document.getElementById("userChoiceLabel").innerHTML = "What kind of monitor do you want?";
            document.getElementById("userChoice").innerHTML = options;

        } else if (value === "Desktop") {
            let options = "";
            for (let id in elems[value]) {
                options += "<option>" + elems[value][id] + "</option>";
            }
            document.getElementById("userChoiceLabel").innerHTML = "How often do you play games?";
            document.getElementById("userChoice").innerHTML = options;
        }
    }
</script>